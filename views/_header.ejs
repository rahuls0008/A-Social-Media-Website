<!-- Header -->
<header> 
    Page Header

    <ul>
        <!-- "locals.user" is same as "user" : but it avoids Error - 'user variable not found'
                                    because property can be nill but variable has to be declared somewhere -->
        <%  if (locals.user){ %>
            <li>   <a href="/users/profile">   <%= user.name   %>    </a>   </li>
            <li>   <a href="/users/sign-out">  Sign Out              </a>    </li>
        
        <%  }else{  %>
            <li>    <a href="/users/sign-in">  Sign In </a>     </li>
            <li>    <a href="/users/sign-up">  Sign Up </a>    </li>
        
        <%  }  %>
    </ul>







</header>


