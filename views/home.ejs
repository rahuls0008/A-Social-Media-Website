
<!-- link css -->
<link rel="stylesheet" href="/css/home.css">



<!-- Variable Part  -->

<!-- Main -->
<h1>   Codeial /  <%=  title %>  </h1>


<section id="feed-posts">
    <h4> Posts </h4>

    <!-- create Post form -->
     <%  if(locals.user){ %>        <!-- display form only if user is Signed-In -->
            
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" cols="30" rows="3" placeholder="What are you up to...."> </textarea>
                <input type="submit" value="Post">
            </form>
    <% } %> 


    <!-- display Posts & related user -->
    <div id = "posts-list-container">
        <ul>
            <%  for(post of posts){ %> 
                    <p>
                        <li>     
                            <%= post.content %>      <br>
                            <small>   <%= post.user.name   %> </small>
                        </li>
                    </p>
                                       
            <%  } %> 
        </ul>       
    </div>

</section>

